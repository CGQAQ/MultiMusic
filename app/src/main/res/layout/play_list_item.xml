<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/playListItemPic"
        android:layout_width="59dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:src="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/playListItemTitle"
        app:layout_constraintEnd_toStartOf="@+id/playListItemTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playListItemTitle"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:gravity="center_vertical"
        android:text="demo demo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playListItemPic"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>